<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <!-- | Important for Responsive | -->
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}{% trans %}site.title{% endtrans %} {% trans %}site.slogan{% endtrans %}{% endblock %}</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
            <!-- Google Fonts CSS -->
            <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>

             <!-- Boostrap min CSS -->
             <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

            <!-- FontAwesome CSS -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />

            <!-- Custom CSS -->
            <link href="{{ asset('css/master.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('images/favicon.png') }}" />
    </head>
    <body>
      <div id="blog" class="container">

        {% block header %}
        <div class="row">
          <div class="col-md-12">
            <header id="header">
              <hgroup>
                <h2>
                      {% block site_headline %}
                        <a href="{{ path('homepage') }}"><img src="{{ asset('images/logo.png') }}"/></a>
                      </img>
                    {% endblock site_headline %}
                  </h2>
                <h3>
                    {% block site_tagline %}
                      <a href="{{ path('homepage') }}">{{ 'site.slogan'|trans }}</a>
                {% endblock site_tagline %}
                </h3>
              </hgroup>
            </header>
          </div>
        </div>
        {% endblock header %} {% block navbar %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light rounded">
          <a class="navbar-brand" href="{{ path('homepage') }}" style="color:#337ab7">{{ 'nav.home'|trans }}</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample09" aria-controls="navbarsExample09" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

          <div class="collapse navbar-collapse" id="navbarsExample09">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <a class="nav-link" href="{{ path('about') }}" style="color:#337ab7">{{ 'nav.about'|trans }}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('contact') }}" style="color:#337ab7">{{ 'nav.contact'|trans }}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('search') }}" style="color:#337ab7">{{ 'nav.search'|trans }}</a>
              </li>
            </ul>
          </div>
        </nav>
        <br> {% endblock navbar %}

        <div class="card card-default">

          <div class="card-body">
            <div class="container-fluid">

              <!--|| The content of the Homepage will be here ||-->
              <section class="main-col">
                {% block body %}{% endblock body %}
              </section>
              <!--|| The content of the Sidebar will be here ||-->
              <aside class="wrapper sidebar">
                {% block sidebar %}{% endblock sidebar %}
              </aside>

            </div>
          </div>
          {% block footer %}
          <!--|| Share in social networks the page that the user is reading ||-->
          <div class="card-footer">

            <div id="socialNetworks" class="text-center">
              <a id="shareFB" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">
                  <i class="fab fa-facebook-f fa-2x" alt="Share on Facebook"/>
                </i>

                <a id="shareTW" target="_blank" href="http://twitter.com/home?status={{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">
                  <i class="fab fa-twitter fa-2x" alt="Share on Twitter"/>
                </i>
              </div>

    <div id="footerInfo" class="text-center">
	  	    <a href="http://screaming-eagle.com" target="_blank">{% trans %}footer.copy{% endtrans %}</a> &copy; {{ "now" | date("Y") }} <a href="mailto://{% trans %}footer.mail.username{% endtrans %}@{% trans %}footer.mail.domain{% endtrans %}">{% trans %}footer.mail.title{% endtrans %}</a>

	  	    <div class="ftr-tiny">
	  	    <a href="">{% trans %}legal.terms{% endtrans %}</a>&nbsp;&nbsp;|&nbsp;&nbsp;
	  	    <a href="">{% trans %}legal.disclaimer{% endtrans %}</a>&nbsp;&nbsp;|&nbsp;&nbsp;
	  	    <a href="">{% trans %}legal.privacy{% endtrans %}</a>&nbsp;&nbsp;|&nbsp;&nbsp;
	  	    <a href="">{% trans %}legal.trademarks{% endtrans %}</a>&nbsp;&nbsp;|&nbsp;&nbsp;
	  	    <a href="">{% trans %}legal.imprint{% endtrans %}</a>
        </div>
	  	{% endblock %}
	</div>
  </div>

</div>

	        {% block javascripts %}
          <!-- Optional JavaScript -->
              <!-- jQuery first, then Popper.js, then Bootstrap JS -->
              <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
              <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
              <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

           <!-- FontAwesome JS -->
           <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" integrity="sha512-F5QTlBqZlvuBEs9LQPqc1iZv2UMxcVXezbHzomzS6Df4MZMClge/8+gXrKw2fl5ysdk4rWjR0vKS7NNkfymaBQ==" crossorigin="anonymous"></script>

           <!-- Custom JS -->
           <script src="{{ asset('js/master.js') }}"></script>
	        {% endblock %}

    	</div>

    </body>
</html>
